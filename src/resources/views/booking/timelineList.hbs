<script>

    function clickFunc(e) {
        const index = e.getAttribute('index-value')
        document.querySelector('.timeline-infor.active').classList.remove('active')
        const timelineInforPanel = document.querySelector(`.timeline-infor-${index}`)
        timelineInforPanel.classList.add('active')
    }


</script>