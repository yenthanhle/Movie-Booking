<div class="container mt-4 customer-infor">
    <div class="left">
        <div class="btn-group-vertical mt-4">
            <a href="/customer/account" class="btn btn-outline-success mt-4">
                Thông tin chung
            </a>
            <a href="/customer/orders" class="btn btn-success mt-4">
                Hóa đơn
            </a>
        </div>
    </div>
    <div class="right">
        {{#if orders}}
        {{#each orders}}
        <h2>Thông tin hoá đơn</h2>
        <div class="list-group mt-4" style="width: 50%; margin: auto">
            <a href="/customer/orders/{{this._id}}"
                class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{this.timelineInfor.movie_name}}</h5>
                    <small>{{this.timelineInfor.date}} - {{this.timelineInfor.time}}</small>
                </div>
                <p class="mb-1">{{this.timelineInfor.theater_name}}</p>
                <small>{{this.seat_name}}</small>
                <br>
                <small>{{this.payment}}</small>
            </a>
        </div>
        {{/each}}
        {{else}}
        <h2>ERROR!!!</h2>
        {{/if}}
    </div>
</div>