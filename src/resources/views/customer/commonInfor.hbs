<div class="container mt-4 customer-infor">
    <div class="left">
        <div class="btn-group-vertical mt-4">
            <a href="/customer/account" class="btn btn-outline-success mt-4">
                Thông tin chung
            </a>
            <a href="/customer/account/edit" class="btn btn-outline-success mt-4">
                Chi tiết tài khoản
            </a>

        </div>
    </div>
    <div class="right">
        <h2>Thông tin chung</h2>
        <div class="customer-infor">
            <div class="input-group input-group-sm mb-3 ">
                {{#if user}}
                <div class="form-field">
                    <label class="label">Họ tên</label>
                    <input class="input" id="name" type="text" readonly value={{user.user_name}}>
                </div>
                <div class="form-field">
                    <label class="label">Ngày sinh</label>
                    <input class="input" id="birthday" type="date" readonly value={{user.date_of_birth}}>
                </div>
                <div class="form-field">
                    <label class="label">Thành phố / Tỉnh</label>
                    <input class="input" id="location" type="text" readonly value="{{user.address}}">
                </div>
                <div class="form-field">
                    <label class="label">Số điện thoại</label>
                    <input class="input" id="location" type="text" readonly value={{user.phone_number}}>
                </div>
                {{else}}
                <h2>ERROR!!!</h2>
                {{/if}}
            </div>
        </div>
        <a href="/customer/account/edit" class="btn btn-success btn-lg active" role="button" type="button">Cập nhật</a>


    </div>
</div>