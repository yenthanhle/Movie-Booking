<div class="mt-4 movies-list-container container">
    <div class="slide-movies">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="movies-poster-slide"
                        src="https://media.lottecinemavn.com/Media/WebAdmin/be5a1104e0bc4fb0bdbf49d02a929cbe.jpg"
                        alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="movies-poster-slide"
                        src="https://media.lottecinemavn.com/Media/WebAdmin/3c0d96cf2cf24aec91f9247d7ee90026.jpg"
                        alt="Second slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="list-movies">
        <div class="btn-panel btn-group" role="group">
            <a href="/movies/showing-now" type="button" class="btn btn-success">Phim đang chiếu</a>
            
            <p></p>
            <a href="/movies/comming-soon" type="button" class="btn btn-success">Phim sắp chiếu</a>
        </div>
        <div class="row">
            {{#each movies}}
            <div class="col-sm-6 col-lg-4">
                <div class="card card-movie-item">
                    <a href='/movies/{{this.slug}}'>
                        <img class="card-img-top" src={{this.poster}} alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <a href='/movies'>
                            <h5 class="card-title"></h5>
                        </a>
                        <p class="card-text">{{this.name}}</p>
                        <p class="card-text">{{this.release_date}}</p>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>


</div>